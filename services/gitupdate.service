[Unit]
Description=Git auto-pull at startup
After=fakeknxpv.service
Requires=fakeknxpv.service
Wants=network-online.target

[Service]
Type=oneshot
User=pi
Group=pi
ExecStart=/home/pi/git-update.sh
WorkingDirectory=/home/pi/fakeknxpv
StandardOutput=journal
StandardError=journal
RemainAfterExit=false

[Install]
WantedBy=multi-user.target
